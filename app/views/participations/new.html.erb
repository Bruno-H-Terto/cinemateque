<%= page_title("Nova participação de #{@actor.name}") %>

<%= form_with(model: [@actor, @participation]) do |f| %>
  <div class="mb-6">
    <%= f.label :movie, class: 'form-label' %>
    <%= f.collection_select :movie, Movie.all, :id, :title, class: 'form-field' %>
  </div>
  <div class="mb-6">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-field' %>
  </div>
  <div>
    <%= f.submit 'Criar Participação', class: 'btn-confirm' %>
  </div>
<% end %>
