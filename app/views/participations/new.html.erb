<%= page_title("Nova participação de #{@actor.name}") %>

<%= form_with(model: @actor) do |f| %>
  <div class="mb-6">
    <%= f.label :movie, class: 'form-label' %>
    <%= f.collection_select :movie, Movie.all class: 'form-field' %>
  </div>
  <div class="mb-6">
    <%= f.label :nationality, class: 'form-label' %>
    <%= f.text_field :nationality, class: 'form-field' %>
  </div>
  <div>
    <%= f.submit 'Criar Ator', class: 'btn-confirm' %>
  </div>
<% end %>
