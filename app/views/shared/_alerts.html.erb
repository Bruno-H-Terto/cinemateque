<% if notice %>
  <div class="p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:text-gray-600 dark:bg-slate-300" role="alert">
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-600 dark:text-red-600 dark:bg-slate-300" role="alert">
    <%= alert %>
  </div>
<% end %>
